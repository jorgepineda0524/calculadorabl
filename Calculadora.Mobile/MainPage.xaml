<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora.Mobile.MainPage"
             Padding="{OnPlatform iOS='0,20,0,0'}"
             BackgroundColor="{DynamicResource SecondaryColor}"
             >

    <Grid
        Padding="5,0"
        ColumnSpacing="1"
        RowSpacing="1"
        >
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            x:Name="resultado"
            Grid.ColumnSpan="4"
            BackgroundColor="White"
            FontSize="48"
            HorizontalTextAlignment="End"
            LineBreakMode="NoWrap"
            Text="0"
            TextColor="Orange"
            VerticalTextAlignment="Center"
            />

        <Button 
            Grid.Row="1"
            Grid.ColumnSpan="2"
            BackgroundColor="LightGrey"
           Clicked="OnClear"
            CornerRadius="0"
            FontSize="36"
            Text="C"
            />

        <Button 
            Grid.Row="1"
            Grid.ColumnSpan="2"
            BackgroundColor="LightGrey"
           Clicked="OnClear"
            CornerRadius="0"
            FontSize="36"
            Text="C"
            TextColor="DarkGrey"
            />

        <Button 
            Grid.Row="1"
            Grid.Column="2"
            BackgroundColor="LightGrey"
           Clicked="SquareRoot"
            CornerRadius="0"
            FontSize="36"
            Text="X2"
            TextColor="DarkGrey"
            />

        <Button
            Grid.Row="2"
            Grid.Column="0"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="1"
            TextColor="DarkGrey"
            />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="2"
            TextColor="DarkGrey"
            />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="3"
            TextColor="DarkGrey"
            />

        <Button
            Grid.Row="3"
            Grid.Column="0"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="4"
            TextColor="DarkGrey"
            />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="5"
            TextColor="DarkGrey"
            />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="6"
            TextColor="DarkGrey"
            />

        <Button
            Grid.Row="4"
            Grid.Column="0"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="7"
            TextColor="DarkGrey"
            />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="8"
            TextColor="DarkGrey"
            />
        <Button
            Grid.Row="4"
            Grid.Column="2"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="9"
            TextColor="DarkGrey"
            />

        <Button
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            BackgroundColor="White"
            Clicked="SelectionNumber"
            CornerRadius="0"
            FontSize="36"
            Text="0"
            TextColor="DarkGrey"
            />

        <Button
            Grid.Row="1"
            Grid.Column="3"
            BackgroundColor="Grey"
            Clicked="OperationSelected"
            CornerRadius="0"
            FontSize="36"
            Text="/"
            TextColor="DarkGrey"
            />

        <Button
            Grid.Row="2"
            Grid.Column="3"
            BackgroundColor="Grey"
            Clicked="OperationSelected"
            CornerRadius="0"
            FontSize="36"
            Text="*"
            TextColor="DarkGrey"
            />

        <Button
            Grid.Row="3"
            Grid.Column="3"
            BackgroundColor="Grey"
            Clicked="OperationSelected"
            CornerRadius="0"
            FontSize="36"
            Text="-"
            TextColor="DarkGrey"
            />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            BackgroundColor="Grey"
            Clicked="OperationSelected"
            CornerRadius="0"
            FontSize="36"
            Text="+"
            TextColor="DarkGrey"
            />
        <Button
            Grid.Row="5"
            Grid.Column="3"
            BackgroundColor="Grey"
            Clicked="Calculate"
            CornerRadius="0"
            FontSize="36"
            Text="="
            TextColor="DarkGrey"
            />
    </Grid>

</ContentPage>
